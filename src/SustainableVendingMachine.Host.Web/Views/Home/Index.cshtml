@{
    ViewData["Title"] = "Sustainable Vending Machine";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Sustainable Vending Machine</h1>

    <div class="container">
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-6">&nbsp;</div>
            <div class="col-6">
                Throw in a Coin:
                <input class="coinBtn" type="button" id="tenCentCoin" value="Ten Cent" />
                <input class="coinBtn" type="button" id="twentyCentCoin" value="Twenty Cent" />
                <input class="coinBtn" type="button" id="fiftyCentCoin" value="Fifty Cent" />
                <input class="coinBtn" type="button" id="oneEuroCoin" value="One Euro" />
                <br />
                Purchase a Product:
                <input class="productBtn" type="button" id="teaProduct" value="Tea" />
                <input class="productBtn" type="button" id="espressoProduct" value="Espresso" />
                <input class="productBtn" type="button" id="juiceProduct" value="Juice" />
                <input class="productBtn" type="button" id="chickenSoupProduct" value="Chicken soup" />
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <textarea  id="vendingMachineDisplay"></textarea>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/vendingMachine.js"></script>
